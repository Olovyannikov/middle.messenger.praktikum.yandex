{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "VDom.createElement",
    "jsxFragmentFactory": "VDom.createFragmentElement",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "sourceMap": true,
    "strictNullChecks": true,
    /* Linting */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/jsx": [
        "./src/jsx/index.ts"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
